// TODO: split into 2 files to provide another set of options for files running in Node
{
  "extends": ["../shared/tsconfig.json"],
  "include": ["."],
  "compilerOptions": {
    // Set if using a different name rather than tsconfig.json
    // "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.exampleName.tsbuildinfo"",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // Bundling
    "noEmit": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    // Need to set in this file, rather than the base since it requires the moduleResolution option set
    "resolveJsonModule": true,

    // Used to mimic subpath imports for bundled code (also set in the Vite config). If there is an imports field in the package.json, imports would still work, but
    // it takes precedence and the IDE suggests Node-style ESM imports (a.k.a. includes, extensions, doesn't support index imports, etc.) which is not desired in bundled code
    "paths": {
      "#/*": ["./src/*"]
    },

    "types": ["vite/client"]
  }
}
