{
  "extends": "../shared/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "paths": {
      "#*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}
